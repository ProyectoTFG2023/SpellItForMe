<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvSkillOnSet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSkillOnSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSkillOnSetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Skill name" />

        <ImageView
            android:id="@+id/ivSkillOnSetIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSkillOnSetName"
            app:srcCompat="@mipmap/ic_phys_attack_skill_foreground" />

        <TextView
            android:id="@+id/tvSkillOnSetCurrentRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivSkillOnSetIcon"
            app:layout_constraintStart_toEndOf="@+id/ivSkillOnSetIcon"
            app:layout_constraintTop_toTopOf="@+id/ivSkillOnSetIcon"
            tools:text="Lvl. x/y" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSKillOnSetLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvSkillOnSetCurrentRank"
            app:layout_constraintStart_toEndOf="@+id/tvSkillOnSetCurrentRank"
            app:layout_constraintTop_toTopOf="@+id/tvSkillOnSetCurrentRank">

            <ImageView
                android:id="@+id/ivSkillOnSetLevelOne"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_phys_attack_skill_foreground" />

            <ImageView
                android:id="@+id/ivSkillOnSetLevelTwo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivSkillOnSetLevelOne"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_phys_attack_skill_foreground" />

            <ImageView
                android:id="@+id/ivSkillOnSetLevelThree"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivSkillOnSetLevelTwo"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_phys_attack_skill_foreground" />

            <ImageView
                android:id="@+id/ivSkillOnSetLevelFour"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivSkillOnSetLevelThree"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_phys_attack_skill_foreground" />

            <ImageView
                android:id="@+id/ivSkillOnSetLevelFive"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivSkillOnSetLevelFour"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_phys_attack_skill_foreground" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>